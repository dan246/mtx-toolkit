# MTX Toolkit Environment Variables

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://mtx:mtx_password@localhost:15433/mtx_toolkit

# Redis
REDIS_URL=redis://localhost:6380/0

# MediaMTX Connection (連接到你現有的 MediaMTX)
# 如果使用 docker-compose，則使用 host.docker.internal
# 如果本地開發，則使用 localhost
MEDIAMTX_API_URL=http://localhost:9998
MEDIAMTX_RTSP_URL=rtsp://localhost:8555

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Auto-remediation
RETRY_MAX_ATTEMPTS=5
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0

# Recording
RECORDING_BASE_PATH=/recordings
DISK_USAGE_THRESHOLD=0.85
